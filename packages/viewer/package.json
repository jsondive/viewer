{
	"name": "@jsondive/viewer",
	"version": "0.0.17",
	"description": "",
	"keywords": [],
	"author": "",
	"license": "SEE LICENSE IN LICENSE.txt",
	"scripts": {
		"build": "npm run build-js && npm run build-css",
		"dev": "concurrently \"npm run watch-js\" \"npm run watch-css\"",
		"lint": "eslint src",
		"check-types": "tsc --noEmit",
		"build-js": "tsup",
		"build-declarations": "tsc --emitDeclarationOnly",
		"build-css": "postcss src/root.css -o dist/root.css",
		"watch-js": "tsup --watch",
		"watch-declarations": "onchange -i \"src/**/*.{ts,tsx}\" -- npm run build-declarations",
		"watch-css": "onchange -i \"src/**/*.{ts,tsx,css}\" \"../library/dist/*.css\" -- npm run build-css",
		"test": "jest src",
		"prepack": "npm run build"
	},
	"files": [
		"dist",
		"src",
		"LICENSE.txt"
	],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"sideEffects": false,
	"devDependencies": {
		"@babel/cli": "^7.28.0",
		"@babel/core": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"@babel/preset-react": "^7.27.1",
		"@babel/preset-typescript": "^7.27.1",
		"@eslint/js": "^9.28.0",
		"@jsondive/shared-config": "0.0.10",
		"@stylexjs/babel-plugin": "^0.15.3",
		"@stylexjs/eslint-plugin": "^0.15.3",
		"@stylexjs/postcss-plugin": "^0.15.3",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.17",
		"@types/luxon": "^3.6.2",
		"@types/node": "^22.17.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.1",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.0",
		"esbuild-plugin-babel": "^0.2.3",
		"eslint": "^9.28.0",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.2.0",
		"jest": "^30.0.4",
		"onchange": "^7.1.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-import": "^16.1.1",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0"
	},
	"peerDependencies": {
