{
  "name": "@jsondive/library",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "npm run build-js && npm run build-css && npm run build-declarations",
    "dev": "concurrently \"npm run watch-js\" \"npm run watch-declarations\" \"npm run watch-css\"",
    "lint": "eslint src",
    "check-types": "tsc --noEmit",
    "build-js": "babel src --out-dir dist --extensions .ts,.tsx",
    "build-declarations": "tsc --emitDeclarationOnly",
    "build-css": "postcss src/root.css -o dist/root.css",
    "watch-js": "onchange -i \"src/**/*.{ts,tsx}\" -- npm run build-js",
    "watch-declarations": "onchange -i \"src/**/*.{ts,tsx}\" -- npm run build-declarations",
    "watch-css": "onchange -i \"src/**/*.{ts,tsx,css}\" -- npm run build-css"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.28.0",
    "@jsondive/shared-config": "*",
    "@stylexjs/babel-plugin": "^0.15.2",
    "@stylexjs/eslint-plugin": "^0.13.1",
    "@stylexjs/postcss-plugin": "^0.15.2",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "babel": "^5.8.38",
    "concurrently": "^9.2.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "onchange": "^7.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.9",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "postcss-import": "^16.1.1"
  }
}
